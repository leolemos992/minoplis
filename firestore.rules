rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Utilizadores: Cada utilizador pode ler/escrever o seu próprio perfil.
    // Qualquer pessoa autenticada pode ler o perfil de outra pessoa (para ver níveis, etc.).
    match /users/{userId} {
      allow get: if isSignedIn();
      allow update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId && request.resource.data.uid == userId;
    }

    // Jogos:
    match /games/{gameId} {
      // Qualquer utilizador autenticado pode listar os jogos para se juntar.
      allow list: if isSignedIn();
      
      // Um utilizador pode ler os dados de um jogo se ele for um jogador na partida OU se o jogo estiver à espera.
      allow get: if isSignedIn() && (isPlayerInGame(gameId, request.auth.uid) || resource.data.status == 'waiting');

      // Criação: Qualquer utilizador autenticado pode criar um jogo, desde que se defina como anfitrião.
      allow create: if isSignedIn() && request.resource.data.hostId == request.auth.uid;

      // Atualização:
      allow update: if isSignedIn() &&
        (
          (isHost(gameId) && isStartingGame(request, resource)) ||
          (isHost(gameId) && isFinishingGame(request)) ||
          (isJoiningWaitingGame(request, resource)) ||
          isPassingTurn(gameId, request, resource) ||
          isManagingAuction(gameId, request, resource)
        );

      // Eliminar: Apenas o anfitrião pode eliminar um jogo que ainda está em espera.
      allow delete: if isSignedIn() && isHost(gameId) && resource.data.status == 'waiting';

      // Subcoleção de Jogadores
      match /players/{playerId} {
        // Leitura: Um jogador pode ler os dados de qualquer jogador na partida, OU pode ler os seus próprios dados (essencial para entrar no jogo).
        allow get: if isSignedIn() && (isPlayerInGame(gameId, request.auth.uid) || request.auth.uid == playerId);

        // Listar: Só os jogadores da partida podem ver a lista de todos os jogadores, OU qualquer um pode ver a lista se o jogo estiver à espera.
        allow list: if isSignedIn() && (isPlayerInGame(gameId, request.auth.uid) || get(/databases/$(database)/documents/games/$(gameId)).data.status == 'waiting');
        
        // Criação: Um utilizador pode criar o seu próprio documento de jogador, desde que se adicione ao jogo correspondente.
        allow create: if isSignedIn() && request.auth.uid == playerId && request.resource.data.userId == playerId;
        
        // Atualização: Um jogador pode atualizar o seu próprio documento.
        allow update: if isSignedIn() && request.auth.uid == playerId;
        
        // Eliminar: Um jogador pode ser eliminado (ex: falência). A lógica é gerida por transações.
        allow delete: if isSignedIn(); 
      }
    }

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isHost(gameId) {
      return get(/databases/$(database)/documents/games/$(gameId)).data.hostId == request.auth.uid;
    }

    function isPlayerInGame(gameId, userId) {
      let game = get(/databases/$(database)/documents/games/$(gameId)).data;
      return userId in game.playerOrder;
    }

    function isStartingGame(req, res) {
      return res.data.status == 'waiting' && req.resource.data.status == 'active' && req.resource.data.playerOrder.size() > 0;
    }
    
    function isFinishingGame(req) {
      return req.resource.data.status == 'finished' && req.resource.data.winnerId != null;
    }

    function isJoiningWaitingGame(req, res) {
      let isWaiting = res.data.status == 'waiting';
      // Garante que o jogador está apenas a adicionar-se a si mesmo e não a outros ou a remover jogadores.
      let isAddingSelf = req.resource.data.playerOrder.size() == res.data.playerOrder.size() + 1 && req.auth.uid in req.resource.data.playerOrder;
      return isWaiting && isAddingSelf;
    }

    function isPassingTurn(gameId, req, res) {
      let game = get(/databases/$(database)/documents/games/$(gameId)).data;
      let nextPlayerIndex = (game.turn + 1) % game.playerOrder.size();
      let nextPlayerId = game.playerOrder[nextPlayerIndex];

      return req.auth.uid == game.currentPlayerId && 
             req.resource.data.currentPlayerId == nextPlayerId &&
             req.resource.data.turn == nextPlayerIndex;
    }

    function isManagingAuction(gameId, req, res) {
        let authId = request.auth.uid;
        let game = get(/databases/$(database)/documents/games/$(gameId)).data;
        
        // O jogador do turno atual pode iniciar um leilão.
        let isStartingAuction = res.data.auction == null && 
                                req.resource.data.auction.status == 'active' && 
                                authId == game.currentPlayerId;
        
        // Qualquer participante pode dar um lance.
        let isBidding = res.data.auction != null && res.data.auction.status == 'active' &&
                        req.resource.data.auction.currentBid > res.data.auction.currentBid &&
                        req.resource.data.auction.currentBidderId == authId &&
                        authId in res.data.auction.participatingPlayerIds;

        // Qualquer participante pode desistir.
        let isPassing = res.data.auction != null && res.data.auction.status == 'active' &&
                        !(authId in req.resource.data.auction.participatingPlayerIds) &&
                        (authId in res.data.auction.participatingPlayerIds);

        // O jogador do turno atual pode finalizar um leilão.
        let isFinishingAuction = res.data.auction != null && res.data.auction.status == 'active' &&
                                  req.resource.data.auction.status == 'finished' &&
                                  authId == game.currentPlayerId;

        return isStartingAuction || isBidding || isPassing || isFinishingAuction;
    }
  }
}
